@using EntityLayer.Concrete
@model List<Skill>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Skills</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Header</th>
                <th scope="col" class="sort" data-sort="status">Ratio</th>
                <th scope="col">Delete</th>
                <th scope="col" class="sort" data-sort="completion">Update</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        @item.SkillID
                    </th>
                    <td class="budget">
                        @item.Title
                    </td>
                    <td>
                        <div class="d-flex align-items-center">
                            <span class="completion mr-2">@item.Value %</span>
                            <div>
                                <div class="progress">
                                    <div class="progress-bar bg-danger" role="progressbar" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100" style="width: @item.Value%;"></div>
                                </div>
                            </div>
                        </div>
                    </td>
                    <td>
                        @*Delete*@
                        <a href="#" class="btn btn-danger">Delete</a>
                    </td>
                    <td>
                        @*Update*@
                        <a href="#" class="btn btn-warning">Update</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
    <br/>
    <a href ="#" class="btn btn-primary">Add New Skill</a>
</div>
